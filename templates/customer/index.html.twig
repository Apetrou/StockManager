{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customers
        <span class="float-right"><a class="btn btn-success" href="{{ path('customer_new') }}"><i class="fas fa-plus"></i> Create new</a></span>
    </h1>

    <table class="table table-striped table-bordered" id="customerTable">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Telephone Number</th>
                <th>Shipping Method</th>
                <th>Comments</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.telephoneNumber }}</td>
                <td>{{ customer.shippingMethod }}</td>
                <td>{{ customer.comments }}</td>
                <td>
                    <div class="dropdown btn-group float-right" >
                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-cog"></i>
                            <span class="caret"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="{{ path('customer_show', {'id': customer.id}) }}">View Customer</a>
                            <a class="dropdown-item" href="{{ path('customer_edit', {'id': customer.id}) }}">Edit Customer</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}