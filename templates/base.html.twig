<!DOCTYPE html>
<html>
    <head>
        {% block head_js %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
        {% block head_css %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>

    {% if app.user %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark " style="margin-bottom: 30px;">
            <a class="navbar-brand" href="#">Petrou Farming</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <form class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {#<li class="nav-item {% if 'home' in app.request.uri %} active {% endif %}">#}
                        {#<a class="nav-link" href="/home"><i class='fa fa-home' aria-hidden='true'></i> Home</a>#}
                    {#</li>#}
                    <li class="nav-item {% if 'product' in app.request.uri %} active {% endif %}">
                        <a class="nav-link" href="/product"><i class='fa fas fa-archive' aria-hidden='true'></i> Products</a>
                    </li>
                    <li class="nav-item {% if 'customer' in app.request.uri %} active {% endif %}">
                        <a class="nav-link" href="/customer"><i class='fa fas fa-users' aria-hidden='true'></i> Customers</a>
                    </li>
                    {#<li class="nav-item {% if 'purchase' in app.request.uri %} active {% endif %}">#}
                        {#<a class="nav-link" href="/purchase"><i class='fas fa-euro-sign' aria-hidden='true'></i> Purchase</a>#}
                    {#</li>#}
                </ul>
                <form class="form-inline" style="text-align: center;">
                    <input type="text" id="search" href="{{ path('ajax_search') }}"  style="width:400px;  margin-left: 90px;" class="form-control" id="item-search" placeholder="Search for customer..."></input>
                    <span class="input-group-btn">
                      <button class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                    </span>
                </form>
                <ul class="navbar-nav ">
                    <li class="nav-item" style="margin-right: 20px;">
                        <a class="nav-link"><i class="fas fa-user"></i> {{ app.user.username }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-secondary" href="{{ path('logout') }}"><i class="fa fas fa-sign-out-alt"></i> Logout</a>
                    </li>
                </ul>
            </form>
        </nav>

    {% endif %}

        <div class="container" style="margin-top: 20px;">
            {% block body %}
            {% endblock %}
        </div>

    </body>

    {% if app.user %}

    <footer class="fixed-bottom">
        <div class="footer footer-copyright py-3 text-center bg-dark" style="overflow: hidden; color: white; font-size: .9rem;">
            Â© 2018 Copyright: Alkis Petrou
        </div>
    </footer>

    {% endif %}

</html>
