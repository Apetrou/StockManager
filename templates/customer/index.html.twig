{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customers
        <span class="float-right"><a class="btn btn-success" href="{{ path('customer_new') }}">Create new</a></span>
    </h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>FirstName</th>
                <th>LastName</th>
                <th>TelephoneNumber</th>
                <th>ShippingMethod</th>
                <th>Comments</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                {#<td>{{ customer.id }}</td>#}
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.telephoneNumber }}</td>
                <td>{{ customer.shippingMethod }}</td>
                <td>{{ customer.comments }}</td>
                <td class="text-center">
                    <a class="btn btn-secondary" href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}