{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="form-inline">
        <a href="{{ path('product_index') }}" class="btn btn-outline-secondary back-button"><i class="fa fas fa-arrow-left"></i></a>
        Product - {{ product.name }}
    </h1>

    <table class="table">
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ product.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Artifact Number</th>
                <td>{{ product.artifactNumber }}</td>
            </tr>
            <tr>
                <th>Catalogue Page</th>
                <td>{{ product.cataloguePage }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ product.cost }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ product.comments }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <div class="clearfix" style="margin-bottom: 20px"></div>
{% endblock %}