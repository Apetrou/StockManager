{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ pageTitle }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button class="btn btn-sm btn-outline-secondary back-page"><i class="fas fa-caret-left"></i> Back</button>
        </div>
    </div>

    <table class="table">
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ product.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Artifact Number</th>
                <td>{{ product.artifactNumber }}</td>
            </tr>
            <tr>
                <th>Catalogue Page</th>
                <td>{{ product.cataloguePage }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ product.cost }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ product.comments }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning btn-sm" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <div class="clearfix" style="margin-bottom: 20px"></div>
{% endblock %}