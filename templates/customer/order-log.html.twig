{% extends 'base.html.twig' %}

{% block title %}Customer Order Log{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ pageTitle }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button class="btn btn-sm btn-outline-secondary back-page"><i class="fas fa-caret-left"></i> Back</button>
        </div>
    </div>

    <table class="table table-hover table-striped" id="customerOrderTable">
        <thead>
            <tr>
                <th>Order number</th>
                <th>Date</th>
                <th>Download Invoice</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.orderDate | date("m/d/Y") }}</td>
                <td><a href="{{ path('generate_customer_invoice', {'id': order.id}) }}" class="btn btn-success download-invoice float-right" data-toggle="tooltip" title="Download Invoice No. {{ order.id }}"><i class="fas fa-receipt"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="clearfix" style="margin-bottom: 20px"></div>
{% endblock %}
